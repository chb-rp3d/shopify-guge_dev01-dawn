{% comment %}
   video_url 变量入参
  class
{% endcomment %}

{% if video_url.type == 'youtube' %}
  <iframe
    {% comment %} src="https://www.youtube.com/embed/{{ video_url.id }}" {% endcomment %}
    src="https://www.youtube.com/embed/{{ video_url.id }}"
    allow="autoplay; encrypted-media"
    title="youtubeIframe"
    class="youtube-component {{class}}"
    allowfullscreen
  ></iframe>
{%- else -%}
  <iframe
    src="https://player.vimeo.com/video/{{ video_url.id }}"
    allow="autoplay; encrypted-media"
    title="vimeoIframe"
    class="{{class}}"
    allowfullscreen
  ></iframe>
{% endif %}
