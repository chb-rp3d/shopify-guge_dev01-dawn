<div class="drawer-menu-sub-item-ward">
    {% for three_menu in three_menus %}
      {% if three_menu.settings.number == sub_index %}
        <div class="drawer-menu-down-three-item">
          {% render 'img-lazyload',
            image_url: three_menu.settings.extras_img,
            class_name: 'menu-down-three-extras-img'
          %}
          {% render 'img-lazyload',
            image_url: three_menu.settings.discount_img,
            class_name: 'menu-down-three-discount-img'
          %}
          {% render 'img-lazyload', class_name: 'menu-down-three-img', image_url: three_menu.settings.img %}
          <div class="menu-down-three-title">
            {{ three_menu.settings.product_title }}
          </div>
          <div class="menu-down-three-btns">
            {% if three_menu.settings.learn_url != blank %}
              <a class="menu-down-three-learn" href="{{three_menu.settings.learn_url}}">
                {{- three_menu.settings.learn_more -}}
              </a>
            {% endif %}
            {% if three_menu.settings.buy_now_url != blank %}
              <a class="menu-down-three-buy" href="{{three_menu.settings.buy_now_url}}">
                {{- three_menu.settings.buy_now -}}
              </a>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>