{{ 'section-home-banner.css' | asset_url | stylesheet_tag }}

<swiper-component
  data-open="true"
>
  <div class="section-home-banner-container">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div
            {% comment %} href="{{block.settings.url}}" {% endcomment %}
            class="swiper-slide home-banner-slide"
          >
            <div
              class="home-banner-img pc-media"
              style="background-image:url({{block.settings.img | image_url: width: block.settings.img.width  }}) ;"
            ></div>
            <div
              class="home-banner-img mobile-media"
              style="background-image:url({{block.settings.md_img | image_url: width: block.settings.md_img.width  }}) ;"
            ></div>
            <div class="home-banner-content">
              <h2 class="home-banner-h2">{{ block.settings.title }}</h2>
              <div class="home-banner-btn comparison-btn_">{{ block.settings.btn_text }}</div>
            </div>
          </div>
        {% endfor %}
      </div>
      {% comment %}
         <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
      {% endcomment %}
    </div>
  </div>
</swiper-component>
{% schema %}
{
  "name": "section-home-banner",
  "settings": [],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "richtext",
          "id": "title",
          "label": "标题"
        },
        {
          "type": "image_picker",
          "id": "img",
          "label": "配图"
        },
        {
          "type": "image_picker",
          "id": "md_img",
          "label": "移动端配图"
        },
        {
          "type": "url",
          "id": "url",
          "label": "跳转链接"
        },
        {
          "type": "text",
          "id": "btn_text",
          "label": "跳转链接"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-home-banner"
    }
  ]
}
{% endschema %}
