{{ 'section-video-img.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
  }

  @media screen and (min-width: 769px) {
    .section-{{section.id}} .section-video-img-h2{
      font-size: {{section.settings.title_size}};
    }
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>

<div class="page-layout section-{{section.id}}">
  <div class="page-layout-content" id="{{section.settings.pointId}}">
    {% if section.settings.title != blank %}
      <h2 class="section-video-img-h2">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.text != blank %}
      <div class="section-video-img-text">{{ section.settings.text }}</div>
    {% endif %}
    <div class="section-video-img">
      {% if section.settings.video_file != blank %}
        {{
          section.settings.video_file
          | video_tag: autoplay: true, loop: true, muted: true, controls: false, image_size: '1200x'
        }}
      {% else %}
        {% render 'img-lazyload', image_url: section.settings.img %}
      {% endif %}
    </div>
    {% if section.blocks.size > 0 %}
      <div class="section-video-img-container">
        {% for item in section.blocks %}
          <div class="section-video-img-item">
            {% render 'img-lazyload', image_url: item.settings.icon %}
            <div class="video-img-item-text">{{ item.settings.text }}</div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "section-video-img",
  "settings": [
    {
      "type": "text",
      "id": "pointId",
      "label": "锚点id"
    },
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "120px 20px 0"
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "20px 20px 0"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "text",
      "id": "title_size",
      "label": "标题pc端大小",
      "default": "32px"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "文本内容"
    },
    {
      "type": "video",
      "id": "video_file",
      "label": "视频文件"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "配图"
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "icon 图标"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "文案"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-video-img"
    }
  ]
}
{% endschema %}
