{{ 'section-overview.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
  }

  {% for item in section.blocks %}
    .section-overview-item.item{{forloop.index}}{
        grid-area:item{{forloop.index}}
    }
  {% endfor %}

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>

<div class="page-layout section-{{section.id}}" id="overview">
  <div class="page-layout-content">
    <h2 class="section-overview-h2">{{ section.settings.title }}</h2>
    <div class="section-overview-container">
      {% for block in section.blocks %}
        <div
          data-point-id="{{block.settings.pointId}}"
          class="section-overview-item item{{forloop.index}}"
        >
          {% assign md_img = block.settings.img %}
          {% if block.settings.md_img != blank %}
            {% assign md_img = block.settings.md_img %}
          {% endif %}
          {% render 'img-lazyload', image_url: block.settings.img, class_name: 'section-overview-item-img pc-media' %}
          {% render 'img-lazyload', image_url: md_img, class_name: 'section-overview-item-img mobile-media' %}
          <img
            height="auto"
            width="auto"
            class="section-overview-item-icon"
            loading="lazy"
            src="https://cdn.shopify.com/s/files/1/0538/9533/2027/files/12480_2x_a9d45b8c-162c-4c7c-b018-86b3761aa95f.png?v=1701682361"
            alt="icon"
          >
        </div>
      {% endfor %}
    </div>
    <div class="section-overview-text">
      {{ section.settings.text }}
    </div>
  </div>
</div>
<script>
  window.addEventListener('DOMContentLoaded', () => {
    const icons = document.querySelectorAll('.section-overview-item');
    icons.forEach((item) => {
      item.onclick = () => {
        if (item.dataset.pointId) {
          const box = document.getElementById(item.dataset.pointId);
          box.scrollIntoView({ behavior: 'smooth' });
        }
      };
    });
  });
</script>
{% schema %}
{
  "name": "section-overview",
  "settings": [
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "70px 20px 0"
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "30px 20px 0"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "文本内容"
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "配图"
        },
        {
          "type": "image_picker",
          "id": "md_img",
          "label": "移动端配图"
        },
        {
          "type": "text",
          "id": "pointId",
          "label": "锚点id 用于跳转到对应板块"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-overview"
    }
  ]
}
{% endschema %}
