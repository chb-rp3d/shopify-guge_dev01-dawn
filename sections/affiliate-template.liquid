        </div>   
    </div>
   
    </div>
  </div>
</div>
  <div class="contain-site-width" style="padding:0;">
    <div>
      <h2>{{ section.settings.spread_word_title | upcase }}</h2>
	  {{ section.settings.spread_word_content }}
    </div>
  </div>
  
  <div class="affiliate-div affiliate-program">
    <div class="affiliate-program-bg" style="background-image: url('{{section.settings.affiliate_program_bg | img_url: '1024x1024' }}');">
      <div class="affiliate-program-content">
        <h2 class="affiliate-program-title">{{ section.settings.affiliate_program_title }}</h2>
        {{ section.settings.affiliate_program_content }}
      </div>
    </div>
  </div>
  
  <div class="affiliate-div affiliate-steps">
    <div class="affiliate-steps-inner">
      <h2>{{ section.settings.steps_title | upcase }}</h2>
      <div class="affiliate-steps-list">
      	{% for block in section.blocks limit: 3 %}
          <div class="affiliate-steps-item">
        	<div class="affiliate-steps-eyecatch" style="background-image: url('{{ block.settings.program_image | img_url: '1024x1024' }}')"></div>
            <h3>{{ block.settings.program_title }}</h3>
            {{ block.settings.program_description }}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  
  <div class="affiliate-div affiliate-pellet">
    <div class="affiliate-pellet-inner">
      <h2>{{ section.settings.grill_title | upcase }}</h2>
      {{ section.settings.grill_content }}
    </div>
  </div>
  
  <div class="affiliate-div affiliate-faq">
    <div class="affiliate-faq-inner">
      <h2>{{ section.settings.faq_title | upcase }}</h2>
      {{ section.settings.faq_content }}
      <div class="affiliate-faq-question">
        {{ section.settings.more_questions }}
      </div>
    </div>
  </div>
</div>

