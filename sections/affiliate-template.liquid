<style>
  .affiliate .affilate-top {
  	min-height: 350px;
    height: 50vh;
    background-position: center center;
    background-size: cover;
    background-repeat: no-repeat;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    position: relative;
    justify-content: center;
  }
  
  
  .affiliate .affilate-top:before {
  	content: '';
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
	position: absolute;
    top: 0;
    left: 0;
  }
  
  .affiliate .affiliate-top-content {
    position: absolute;
    bottom: 30px;
    text-align: center;
    z-index: 1;
    width: 100%;
  }
  
  .affiliate .affiliate-top-content * {
  	font-family: Cabin, sans-serif;
    font-weight: 700;
    color: #fff;
	line-height: 1.4;
    font-size: 2em;
    margin: 0;
  }
  
  @media screen and (max-width: 767px) {
    .affiliate .affiliate-top-content * {
      font-size: 1.75em;
    }
  }
  
  .affiliate .affiliate-div {
  	margin: 20px 0;
  }
  .affiliate-div.affiliate-program {display: none;}
  .affiliate-div.affiliate-pellet {display: none;}
  .affiliate .spread-word {
  	display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  
  .affiliate .spread-word-apply {
    flex-basis: 200px;
    width: 200px;
  }
  
  @media screen and (max-width: 767px) {
    .affiliate .spread-word-apply {
      flex-basis: 100%;
      width: 100%;
    }
  }
  
  .affiliate .spread-word-apply .border {
  	border: 1px solid #ededed;
    width: 200px;
/*     height: 150px; */
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    padding: 10px;
  }
  
  @media screen and (max-width: 767px) {
    .affiliate .spread-word-apply .border {
      width: 100%;
    }
    
    .affiliate .spread-word-apply .border img {
      height: 50px;
    }
  }
  
  .affiliate .spread-word-apply a {
    background-color: #596fa8;
    color: #fff;
    width: 100%;
    display: block;
    text-align: center;
    padding: 10px 5px;
    text-decoration: none;
    text-transform: uppercase;
    border-radius: 5px;
  }
  
  .affiliate .spread-word-content {
    flex-basis: calc(100% - 200px);
    width: calc(100% - 200px);
    padding-left: 30px;
  }
  
  @media screen and (max-width: 767px) {
    .affiliate .spread-word-content {
      flex-basis: 100%;
      width: 100%;
      padding-left: 0;
      margin-top: 30px;
    }
  }
  
  .affiliate .affiliate-program-bg {
  	position: relative;
    padding: 50px 20px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    min-height: 300px;
  }
  
  .affiliate .affiliate-program-bg:before {
  	content: '';
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
	position: absolute;
    top: 0;
    left: 0;
  }
  
  .affiliate .affiliate-program-content {
  	position: relative;
    max-width: 767px;
    margin: auto;
  }
  
  .affiliate .affiliate-program-content > p {
  	color: #fff;
    text-indent: -1em;
    margin-left: 1em;
  }
  
  .affiliate .affiliate-program-content > h2 {
  	font-weight: 700;
    color: #fff;
  }
  
  .affiliate .affiliate-program-content > p:before {
  	content: '✓';
    margin-right: 5px;
  }
  
  .affiliate .affiliate-steps-inner h2 {
  	font-weight: 700;
    text-align: center;
  }
  
  .affiliate .affiliate-steps-list {
  	display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    text-align: center;
  }
  
  .affiliate .affiliate-steps-eyecatch {
    position: relative;
    padding-top: 65%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
  
  .affiliate .affiliate-steps-item {
  	flex: 1;
    padding: 10px;
  }
  
  @media screen and (max-width: 767px) {
  	.affiliate .affiliate-steps-item {
      flex: auto;
    }
  }
  
  .affiliate .affiliate-steps-item h3 {
  	font-weight: 700;
    margin: 10px auto 15px;
  }
  
  .affiliate .affiliate-pellet-inner {
    padding: 50px 10% 70px;
    background-color: #edf1f2;
  }
  
  .affiliate .affiliate-pellet-inner h2 {
  	font-weight: 700;
    text-align: center;
  }
  
  .affiliate .affiliate-pellet-inner h2,
  .affiliate .affiliate-pellet-inner p {
  	font-weight: #fff;
  }
  
  .affiliate .affiliate-faq-inner {
  	padding-left: 10%;
    padding-right: 10%;
  }
  
  @media screen and (max-width: 767px) {
    .affiliate .affiliate-faq-inner {
      padding-left: 0;
      padding-right: 0;
    }
  }
  
  .affiliate .affiliate-faq-inner h2 {
  	font-weight: 700;
    text-align: center;
  }
  
  .affiliate .affiliate-faq-question {
  	margin-top: 50px;
    text-align: center;
  }
  
  .affiliate .affiliate-faq-question a {
  	color: #4f4f4f;
    font-weight: 700;
  }
