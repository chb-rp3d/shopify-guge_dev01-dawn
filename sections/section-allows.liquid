{{ 'section-allows.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>
<div class="page-layout section-{{section.id}}">
  <div class="page-layout-content">
    <div class="section-allows-container">
      <div class="section-allows-content">
        {% for item in section.blocks %}
          <div class="section-allows-item">
            <div class="section-allows-item-text">
              {% render 'img-lazyload', image_url: item.settings.icon %}
              <span>{{ item.settings.text }}</span>
            </div>
            <div class="section-allows-item-video">
              {{
                item.settings.video_file
                | video_tag: autoplay: true, loop: true, muted: true, controls: false, image_size: '1200x'
              }}
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="section-allows-text">{{ section.settings.text }}</div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "section-allows",
  "settings": [
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "63px 20px"
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "30px 20px"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "文本"
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "小图标"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "小图标文本"
        },
        {
          "type": "video",
          "id": "video_file",
          "label": "视频文件"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-allows"
    }
  ]
}
{% endschema %}
