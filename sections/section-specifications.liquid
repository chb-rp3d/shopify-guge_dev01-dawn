{{ 'section-specifications.css' | asset_url | stylesheet_tag }}
<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>

<div class="page-layout section-{{section.id}}" id="spec">
  <div class="page-layout-content">
    <h2 class="section-specifications-h2">{{ section.settings.title }}</h2>
    {% if section.settings.img != blank %}
      <div class="section-specifications-img">
        {% liquid
          assign md_img = section.settings.img
          if section.settings.md_img != blank
            assign md_img = section.settings.md_img
          endif
          render 'img-lazyload', image_url: section.settings.img, class_name: 'pc-media'
          render 'img-lazyload', image_url: md_img, class_name: 'mobile-media'
        %}
      </div>
    {% endif %}
    <div class="section-specifications-container">
      <div class="section-specifications-content">
        {% for block in section.blocks %}
          <div class="specifications-item">
            <div>{{ block.settings.title }}</div>
            <div>{{ block.settings.text }}</div>
          </div>
        {% endfor %}
      </div>
      <div class="section-specifications-footer">
        {{ section.settings.footer_text }}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "section-specifications",
  "settings": [
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "120px 20px 0"
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "60px 20px 0"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "color",
      "id": "title_bg_color",
      "label": "标题背景",
      "default": "#F4F2F2"
    },
    {
      "type": "richtext",
      "id": "footer_text",
      "label": "底部文本内容"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "配图"
    },
    {
      "type": "image_picker",
      "id": "md_img",
      "label": "移动端配图"
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "richtext",
          "id": "title",
          "label": "类型"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "值"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-specifications"
    }
  ]
}
{% endschema %}
