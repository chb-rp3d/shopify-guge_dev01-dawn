{{ 'section-energized.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>
<div class="page-layout section-{{section.id}}">
  <div class="page-layout-content">
    <h2 class="section-energized-h2">{{ section.settings.title }}</h2>
    <div class="section-energized-container">
      <div class="section-energized-content">
        <div class="section-energized-img">
          {% render 'img-lazyload', image_url: section.settings.img %}
        </div>
        <div class="section-energized-right">
          {% for item in section.blocks %}
            <div class="section-energized-icon">
              <div class="section-energized-icon-img">
                {% render 'img-lazyload', image_url: item.settings.icon %}
              </div>
              <div class="section-energized-icon-text">{{ item.settings.icon_text }}</div>
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="section-energized-text">{{ section.settings.text }}</div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "section-energized",
  "settings": [
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "120px 20px"
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "50px 20px"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "段落"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "配图"
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "小图标"
        },
        {
          "type": "richtext",
          "id": "icon_text",
          "label": "文本"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-energized"
    }
  ]
}
{% endschema %}
