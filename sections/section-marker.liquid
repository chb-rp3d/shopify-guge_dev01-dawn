{{ 'section-marker.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>

<div class="page-layout section-{{section.id}}">
  <div class="page-layout-content">
    <div class="section-marker-container">
      <div class="section-marker-img">
        {% render 'img-lazyload', image_url: section.settings.img %}
      </div>
      <div class="section-marker-content">
        <div class="section-marker-ward">
          <h2 class="section-marker-h2">{{ section.settings.title }}</h2>
          <div class="section-marker-text">{{ section.settings.text }}</div>
        </div>
        {% if section.blocks.size > 0 %}
          <div class="section-marker-list">
            {% for item in section.blocks %}
              <div class="section-marker-item">
                <div class="section-marker-item-img">
                  {% render 'img-lazyload', image_url: item.settings.icon %}
                </div>
                <div class="section-marker-item-text">{{ item.settings.text }}</div>
              </div>
            {% endfor %}
          </div>
        {% else %}
          <div class="section-marker-icon">
            {% render 'img-lazyload', image_url: section.settings.icon %}
            <div class="section-marker-tip-text">{{ section.settings.tip_text }}</div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "section-marker",
  "settings": [
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "80px 20px 0"
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "30px 20px 0"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "段落"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "大图"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "小图"
    },
    {
      "type": "richtext",
      "id": "tip_text",
      "label": "小图上的文案"
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "图标"
        },
        {
          "type": "text",
          "id": "text",
          "label": "文案"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-marker"
    }
  ]
}
{% endschema %}
