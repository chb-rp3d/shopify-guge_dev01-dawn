{{ '3dprintcard.css' | asset_url | stylesheet_tag }}

<style>
    .section-{{section.id}}{
      padding-top: 50px;
      padding-bottom: 30px;
  }
</style>

<section-3dprintcard>
  <div class="page-layout section-{{section.id}}">
    <div class="page-layout-content">
      <h2 class="repairtitle">{{ section.settings.title }}</h2>
      <div class="printcard">
        <div class="cardp">
          {% render 'img-lazyload', image_url: section.settings.img %}
          <h3>{{ section.settings.title1 }}</h3>
          <p>{{ section.settings.text1 }}</p>
          <p>{{ section.settings.text2 }}</p>
          <div class="cardlink">
            <a href="{{ section.settings.url }}">詳細へ</a>
            <a href="{{ section.settings.url1 }}">購入へ</a>
          </div>
        </div>
        <div class="printcardimg">
          {% for block in section.blocks %}
            <div class="pcarditem">
             <iframe width="100%" height="100%" src="{{ block.settings.url }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section-3dprintcard>

{% schema %}
    {
  "name": "section-3dprintcard",
  "settings": [

    {
      "type": "text",
      "id": "title",
      "label": "板块标题"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "配图"
    },
    {
      "type": "text",
      "id": "title1",
      "label": "产品标题"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "产品描述"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "产品描述"
    },
    {
      "type": "url",
      "id": "url",
      "label": "LM链接地址"
    },
    {
      "type": "url",
      "id": "url1",
      "label": "BN链接地址"
    }
  ],
    "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "url",
          "id": "url",
          "label": "youtube链接"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-3dprintcard"
    }
  ]
}
{% endschema %}
