{{ 'accessicon.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
  }
  .section-{{section.id}} .page-layout-content {
    padding-top: 85px;
    padding-bottom: 85px;
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>

<div class="page-layout section-{{section.id}}">
  <div class="page-layout-content">
    <div class="accessicon-model">
      {% for block in section.blocks %}
      <div class="accessicon-item">
        <div class="accessicon-img">
         {% render 'img-lazyload', image_url: block.settings.img %}
        </div>
        <span class="accessicontitle">{{ block.settings.text }}</span>
      </div>
        {% endfor %}
    </div>
    
  </div>
</div>
  
{% schema %}
{
  "name": "section-accessicon",
  "settings": [
    
   
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "配图"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "文本内容"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-accessicon"
    }
  ]
}
{% endschema %}