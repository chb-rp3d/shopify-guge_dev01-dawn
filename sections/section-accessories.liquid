{{ 'section-accessories.css' | asset_url | stylesheet_tag }}
<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>

<div class="page-layout section-{{section.id}}">
  <div class="page-layout-content">
    <h2 class="section-accessories-h2">{{ section.settings.title }}</h2>
    <div class="section-accessories-container">
      {% for block in section.blocks %}
        {% liquid
          assign product = all_products[block.settings.product_origin]
          assign current_variant = product
          assign variant_id = block.settings.variant_id
          if variant_id != blank and product.variants.size > 1
            for variant in product.variants
              if variant.id == variant_id
                assign current_variant = variant
              endif
            endfor
          else
            assign variant_id = product.variants[0].id
          endif
        %}
        <div class="accessories-item">
          <div class="accessories-item-img">
            {% render 'img-lazyload', image_url: block.settings.img, class_name: 'pc-media' %}
            {% render 'img-lazyload', image_url: block.settings.md_img, class_name: 'mobile-media' %}
          </div>
          <div class="accessories-item-right">
            <div class="accessories-item-title">{{ block.settings.title }}</div>
            <div class="accessories-item-text">{{ block.settings.text }}</div>
            <div class="accessories-item-price">{{ current_variant.price | money | strip_html }}</div>
            <a class="accessories-item-link" href="{{current_variant.url | within: collection}}">今すぐ購入 ></a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "section-accessories",
  "settings": [
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "120px 20px 0"
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "60px 20px 0"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "product",
          "id": "product_origin",
          "label": "关联产品"
        },
        {
          "type": "number",
          "id": "variant_id",
          "label": "产品变体id 不填默认第一个"
        },
        {
          "type": "image_picker",
          "id": "img",
          "label": "配图"
        },
        {
          "type": "image_picker",
          "id": "md_img",
          "label": "移动端配图"
        },
        {
          "type": "richtext",
          "id": "title",
          "label": "标题"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "文本"
        },
        {
          "type": "url",
          "id": "url",
          "label": "跳转链接"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-accessories"
    }
  ]
}
{% endschema %}
