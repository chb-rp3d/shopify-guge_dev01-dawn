{{ 'section-sharp.css' | asset_url | stylesheet_tag }}

<style>
    .section-{{section.id}}{
        padding:{{section.settings.padding}};
        background-color:#232327;
    }
    {% case section.settings.modal_type %}
    {% when 'type2' %}

      @media screen and (min-width: 769px) {
        .section-{{section.id}} .section-sharp-video{
            flex: 1 0 0;
        }
        {% if section.settings.align == 'row-reverse' %}
        .section-{{section.id}} .section-sharp-tip{
          max-width: 460px;
          margin: 0 auto;
        }
        {% endif %}
        .section-{{section.id}} .section-sharp-container{
            flex-direction: {{section.settings.align}};
        }
      }
    {% else %}

  {% endcase %}
    @media screen and (max-width: 768px) {
        .section-{{section.id}}{
        padding:{{section.settings.md_padding}};
    }
    }
</style>

<div class="page-layout section-{{section.id}}">
  <div class="page-layout-content">
    <h2 class="section-sharp-h2">{{ section.settings.title }}</h2>
    <div class="section-sharp-text">{{ section.settings.text }}</div>
    <div class="section-sharp-container">
      <div class="section-sharp-video">
        {{
          section.settings.video_file
          | video_tag: autoplay: true, loop: true, muted: true, controls: false, image_size: '1200x'
        }}
      </div>
      <div class="section-sharp-item">
        <div class="section-sharp-tip">
          {{ section.settings.tip }}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "section-sharp",
  "settings": [
    {
      "type": "select",
      "id": "modal_type",
      "label": "模块类型",
      "default": "type1",
      "options": [
        {
          "label": "type1",
          "value": "type1"
        },
        {
          "label": "type2",
          "value": "type2"
        }
      ]
    },
    {
      "type": "select",
      "id": "align",
      "label": "左右排列方式",
      "default": "row",
      "options": [
        {
          "label": "row",
          "value": "row"
        },
        {
          "label": "row-reverse",
          "value": "row-reverse"
        }
      ]
    },
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "120px 20px 0"
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "20px 20px 0"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "文本内容"
    },
    {
      "type": "richtext",
      "id": "tip",
      "label": "文本内容"
    },
    {
      "type": "video",
      "id": "video_file",
      "label": "视频文件"
    }
  ],
  "presets": [
    {
      "name": "section-sharp"
    }
  ]
}
{% endschema %}
