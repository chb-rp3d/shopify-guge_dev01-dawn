{{ 'section-made.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{section.id}}{
      background-color: #000000;
      padding:{{section.settings.padding}};
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>

<swiper-component
  id="swiper-{{section.id}}"
  data-open="true"
  data-space-between="10"
  data-slides-per-view="1"
  data-breakpoints='{"769":{"slidesPerView":3,"spaceBetween":16}}'
>
  <div class="page-layout section-{{section.id}}">
    <div class="page-layout-content">
      <h2 class="section-made-h2">{{ section.settings.title }}</h2>
      <div class="section-made-text">{{ section.settings.text }}</div>
      <div class="swiper-container section-made-container">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide section-made-slide">
              {% render 'iframe-model-3d', title: block.settings.title, url: block.settings.model_url %}
            </div>
          {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
      </div>
      <div class="section-swiper-button">
        <div class="swiper-button-prev-cu">
          {% render 'img-next-icon' %}
        </div>
        <div class="swiper-button-next-cu">
          {% render 'img-next-icon' %}
        </div>
      </div>
    </div>
  </div>
</swiper-component>

<script>
  window.addEventListener('DOMContentLoaded', () => {
    const swiperContainer = document.querySelector('#swiper-{{section.id}}');
    const swiper = swiperContainer.swiper;
    swiperContainer.querySelector('.swiper-button-prev-cu').addEventListener('click', () => {
      swiper.slidePrev();
    });
    swiperContainer.querySelector('.swiper-button-next-cu').addEventListener('click', () => {
      swiper.slideNext();
    });
  });
</script>
{% schema %}
{
  "name": "section-made",
  "settings": [
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "60px 20px 120px"
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "40px 20px"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "文本"
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "url",
          "id": "model_url",
          "label": "模型链接"
        },
        {
          "type": "text",
          "id": "title",
          "label": "模型标题"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-made"
    }
  ]
}
{% endschema %}
