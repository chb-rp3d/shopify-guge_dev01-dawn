{{ 'section-buzz.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>
<swiper-component
  data-open="true"
>
  <div class="page-layout section-{{section.id}}">
    <div class="page-layout-content">
      <h2 class="section-buzz-h2">{{ section.settings.title }}</h2>
      <div class="section-buzz-container">
        <div class="section-buzz-logos">
          {% render 'img-lazyload', image_url: section.settings.logo_icon, class_name: 'pc-media' %}
          {% render 'img-lazyload', image_url: section.settings.md_logo_icon, class_name: 'mobile-media' %}
        </div>
        <div class="section-buzz-line"></div>
        <div class="section-buzz-content ">
          <div class="swiper-container section-buzz-left">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <div class="swiper-slide section-buzz-item">
                  {% render 'img-lazyload', image_url: block.settings.icon %}
                  <div class="section-buzz-item-text">{{ block.settings.text }}</div>
                </div>
              {% endfor %}
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-pagination"></div>
          </div>
          <div class="section-buzz-right">
            {% render 'img-lazyload', image_url: section.settings.right_img %}
          </div>
        </div>
      </div>
    </div>
  </div>
</swiper-component>

{% schema %}
{
  "name": "section-buzz",
  "settings": [
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "90px 20px 120px"
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "50px 20px 40px"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "image_picker",
      "id": "logo_icon",
      "label": "logo 图"
    },
    {
      "type": "image_picker",
      "id": "md_logo_icon",
      "label": "移动端 logo图"
    },
    {
      "type": "image_picker",
      "id": "right_img",
      "label": "右侧配图"
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "icon图标"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "文本内容"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-buzz"
    }
  ]
}
{% endschema %}
