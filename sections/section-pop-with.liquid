{{ 'section-pop-with.css' | asset_url | stylesheet_tag }}
<style>
  .section-{{section.id}}{
        background-color:#000;
      padding:{{section.settings.padding}};
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>
<swiper-component
  data-open="true"
  id="section-{{section.id}}"
  data-autoplay="true"
>
  <div class="page-layout section-{{section.id}}">
    <div class="page-layout-content">
      <h2 class="section-pop-with-h2">{{ section.settings.title }}</h2>
      <div class="section-pop-with-text">{{ section.settings.text }}</div>
      <div class="swiper-container section-pop-with-container">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide section-pop-with-item ">
              {% render 'iframe-model-3d', url: block.settings.url %}
              <div class="section-pop-with-right">
                <div class="section-pop-with-tip">{{ block.settings.tip }}</div>
                <div
                  class="section-pop-with-icon"
                  style="background-image:url({{block.settings.icon |  image_url: width:block.settings.icon.width }});"
                >
                  {{ block.settings.icon_text }}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="section-swiper-button">
        <div class="swiper-button-prev-cu">
          {% render 'img-next-icon' %}
        </div>
        <div class="swiper-button-next-cu">
          {% render 'img-next-icon' %}
        </div>
      </div>
    </div>
  </div>
  <div class="section-pop-with-content">
    {% for item in section.blocks %}
      <div class="section-pop-with-ward">
        <div
          class="section-pop-with-icon"
          style="background-image:url({{item.settings.icon |  image_url: width: item.settings.icon.width}});"
        >
          {{ item.settings.icon_text }}
        </div>
        <div class="section-pop-with-tip">{{ item.settings.tip }}</div>
      </div>
    {% endfor %}
  </div>
</swiper-component>

<script>
  window.addEventListener('DOMContentLoaded', () => {
    const swiper_container = document.getElementById('section-{{section.id}}');
    const swiper = swiper_container.swiper;

    swiper_container.querySelector('.swiper-button-prev-cu').addEventListener('click', () => {
      swiper.slidePrev();
    });
    swiper_container.querySelector('.swiper-button-next-cu').addEventListener('click', () => {
      swiper.slideNext();
    });
  });
</script>
{% schema %}
{
  "name": "section-pop-with",
  "settings": [
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "80px 20px"
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "50px 20px"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "段落"
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "url",
          "id": "url",
          "label": "模型链接"
        },
        {
          "type": "richtext",
          "id": "tip",
          "label": "文本内容"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "icon 图标"
        },
        {
          "type": "richtext",
          "id": "icon_text",
          "label": "icon 文案"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-pop-with"
    }
  ]
}
{% endschema %}
