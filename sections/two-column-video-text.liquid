{% style %}
  #shopify-section-{{ section.id }} .two-column-video-text-block-align {
    /*text-align:{{ section.settings.block-text-alignment }};*/
    width:{{ section.settings.block-rich-text-width }}%;
    margin:0 auto;
  }
  #shopify-section-{{ section.id }} .two-column-video-text-block-title {
    font-size:{{ section.settings.block-title-font-size }}rem;
    color:{{ section.settings.block-title-font-color }};
    margin:0 !important;
    padding:0 0 0.2rem 0;
  }
  #shopify-section-{{ section.id }} .two-column-video-text-block-sub-title {
    font-size:{{ section.settings.block-sub-title-font-size }}rem;
    color:{{ section.settings.block-sub-title-font-color }};
    margin:0 !important;
  }
  #shopify-section-{{ section.id }} .two-column-video-text-block-text {
    font-size:{{ section.settings.block-text-font-size }}rem;
    color:{{ section.settings.block-text-font-color }};
    padding:0.6rem 0 0 0;
  }
  .two-column-video-text-group{
    display:grid;
    grid-template-columns: repeat(2,1fr);
    margin:1rem 0;
    gap:1rem;
  }
  #shopify-section-{{ section.id }} .two-column-video-text-block{
    background-color:{{ section.settings.block-background-color }};
    padding:2rem 2rem;
  }
  .two-column-video-text-video video{
    width:100%;
  }
  
  @media screen and (max-width: 1180px) {
    .two-column-video-text-video{
      overflow:hidden;
      height:360px;
    }
    .two-column-video-text-video video{
      height:100%;
      width:auto;
    }
  }
  @media screen and (max-width: 950px) {
    .two-column-video-text-video{
      height:400px;
    }
  }
   @media screen and (max-width: 768px) {
    .two-column-video-text-group{
    display:grid;
    grid-template-columns: 1fr;
    margin-top:1rem;
    gap:1rem;
  }
  .two-column-video-text-video video{
    width:100%;
    height:auto;
  }
  .two-column-video-text-video{
    overflow:auto;
    height:auto;
  }
  .two-column-video-text-group div:nth-of-type(1){
     order:2
  }
  .two-column-video-text-group div:nth-of-type(2){
     order:1
  }
  .two-column-video-text-group div:nth-of-type(3){
     order:3
  }
  .two-column-video-text-group div:nth-of-type(4){
     order:4
  }
  .two-column-video-text-group div:nth-of-type(5){
     order:6
  }
  .two-column-video-text-group div:nth-of-type(6){
     order:5
  }
  .two-column-video-text-group div:nth-of-type(7){
     order:7
  }
  .two-column-video-text-group div:nth-of-type(8){
     order:8
  }
  .two-column-video-text-group div:nth-of-type(9){
     order:10
  }
  .two-column-video-text-group div:nth-of-type(10){
     order:9
  }
  }

  @media screen and (max-width:600px) {
  .two-column-video-text-block{
    padding:2rem 1rem;
  }

  }
{% endstyle %}

<div class="section   section-blends section-full">
<div {% if template contains 'product' %}class="Product product-section-width"{%- endif -%} style="margin-bottom:0;">
  <div class="two-column-video-text-group">
    {% for block in section.blocks %}
     {%- case block.type -%}
        {%- when 'text' -%}
       <style>
           #shopify-section-{{ section.id }} #block-{{ block.id }} {
            text-align:{{ block.settings.text_alignment }};
          }
       {% if block.settings.title_font_weight != '' %}
         #shopify-section-{{ section.id }} #block-{{ block.id }} .two-column-video-text-block-title {
          font-weight:{{ block.settings.title_font_weight }};
        }
         {% endif %}
       </style>
        <div class="two-column-video-text-block" id="block-{{ block.id }}">
          
          <div class="two-column-video-text-block-align">
           {% if block.settings.title !=blank %}
           {% if block.settings.link %}<a href="{{ block.settings.link }}" class="two-column-text-link">{% endif %}
             <h2 class="two-column-video-text-block-title">
               {{ block.settings.title }}
             </h2>
           {% if block.settings.link %}</a>{% endif %}
           {% endif %}
           {% if block.settings.sub-title !=blank %}
             <h3 class="two-column-video-text-block-sub-title">
              {{ block.settings.sub-title }}
             </h3>
           {% endif %}
           {% if block.settings.text !=blank %}
             <p class="two-column-video-text-block-text">
             {{ block.settings.text }}
             </p>
           {% endif %}
          </div>
         
        </div>
        {%- when 'video' -%}
        <div class="two-column-video-text-video">
          <video autoplay muted loop playsinline>
            <source src="{{block.settings.link}}" alt="" type="video/mp4">
          </video>
        </div>
       {%- when 'image' -%}
       {%- capture section_image -%}
        {%- if block.settings.image != blank -%}
          <div class="FeatureText__ImageWrapper">
    
            <div class="AspectRatio" style="max-width: {{ block.settings.image.width }}px; --aspect-ratio: {{ block.settings.image.aspect_ratio }}">
              {%- assign image_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '.' -%}
              <img class="Image--lazyLoad Image--slide{{ block.settings.image_position | capitalize }}" src="{{ image_url }}" data-expand="-200" data-widths="[{{ supported_sizes }}]" data-sizes="auto" alt="{{ block.settings.image.alt | escape }}">
    
              <noscript>
                <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.image.alt | escape }}">
              </noscript>
            </div>
          </div>
        {%- endif -%}
      {%- endcapture -%}
        <div class="two-column-video-text-video">
          {{- section_image -}}
        </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>
</div>
<script>
  var height = $(".two-column-video-text-video").height;
  $(".two-column-video-text-block").height = height;
  
</script>
