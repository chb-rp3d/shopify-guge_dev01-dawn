{{ 'section-range-video.css' | asset_url | stylesheet_tag }}
<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>

<div class="page-layout section-range-video-container section-{{section.id}}">
  <div class="page-layout-content">
    <div class="section-range-video-content">
      {{
        section.settings.video_file
        | video_tag:
          autoplay: true,
          class: 'section-range-video',
          loop: true,
          muted: true,
          controls: false,
          image_size: '1200x'
      }}
      <div class="section-range-video-text">{{ section.settings.text }}</div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "section-range-video",
  "settings": [
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "120px 20px 0"
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "20px 20px 0"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "文本"
    },
    {
      "type": "video",
      "id": "video_file",
      "label": "视频文件"
    }
  ],
  "presets": [
    {
      "name": "section-range-video"
    }
  ]
}
{% endschema %}
