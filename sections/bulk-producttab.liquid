{{ 'bulk-producttab.css' | asset_url | stylesheet_tag }}
<style>
     .section-{{section.id}} .page-layout-content{
  }
  @media screen and (max-width: 768px) {
    #prod {
      display: none;
    }
  }
</style>
<section-bulkpt id="prod">
  <div class="page-layout section-{{section.id}}">
    <div class="page-layout-content">
      <div class="bulk-tab">
        <a href="{{ section.settings.url1 }}">{{ section.settings.text1 }}</a>
        <a href="{{ section.settings.url2 }}">{{ section.settings.text2 }}</a>
      </div>
      <div class="bulktitletab">
        {{ section.settings.text3 }}
        {{ section.settings.text4 }}
      </div>
      <div class="hpc">
    {% for block in section.blocks %}
<div class="hpc-item">
    <h2>{{ block.settings.title }}</h2>
    <div class="ptimg">
        {% render 'img-lazyload', image_url: block.settings.img %}
    </div>
    <div class="bulkoff">
        <div class="offmode">
            <div class="offitem">
                {{ block.settings.text1 }}
                {{ block.settings.text2 }}
            </div>
            <div class="offitem">
                {{ block.settings.text3 }}
                {{ block.settings.text4 }}
            </div>
            <div class="offitem">
                {{ block.settings.text5 }}
                {{ block.settings.text6 }}
            </div>
            <div class="offitem">
                {{ block.settings.text7 }}
                {{ block.settings.text8 }}
            </div>
        </div>
    </div>
    <div class="tab-container{{ forloop.index }}">
        <button class="tab-button active" onclick="openTab(event, 'tab1-{{ forloop.index }}')">{{ block.settings.text10 }}</button>
        <button class="tab-button" onclick="openTab(event, 'tab2-{{ forloop.index }}')">{{ block.settings.text11 }}</button>
        <button class="tab-button" onclick="openTab(event, 'tab3-{{ forloop.index }}')">{{ block.settings.text12 }}</button>
    </div>
    <div id="tab1-{{ forloop.index }}" class="tab-content active">
        <div class="pprice">
            {{ block.settings.text9 }}
        </div>
    </div>
    <div id="tab2-{{ forloop.index }}" class="tab-content">
        <div class="pprice">
            {{ block.settings.text13 }}
        </div>
    </div>
    <div id="tab3-{{ forloop.index }}" class="tab-content">
        <div class="pprice">
            {{ block.settings.text14 }}
        </div>
    </div>
    <div class="hpcbn">
        <a href="{{ block.settings.url3 }}">
            <p>今すぐ購入</p>
            <div class="cart-icon">
                {% render 'img-lazyload', image_url: block.settings.img1 %}
            </div>
        </a>
    </div>
</div>
<script>
function openTab(event, tabName) {
    var i, tabContent, tabButton;
    tabContent = event.currentTarget.parentElement.parentElement.getElementsByClassName("tab-content");
    for (i = 0; i < tabContent.length; i++) {
        tabContent[i].style.display = "none";
    }
    tabButton = event.currentTarget.parentElement.getElementsByClassName("tab-button");
    for (i = 0; i < tabButton.length; i++) {
        tabButton[i].classList.remove("active");
    }
    document.getElementById(tabName).style.display = "block";
    event.currentTarget.classList.add("active");
}
</script>
{% endfor %}


      </div>
    </div>
  </div>
</section-bulkpt>

