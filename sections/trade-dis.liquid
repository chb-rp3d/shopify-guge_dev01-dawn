{{ 'trade-dis.css' | asset_url | stylesheet_tag }}
<style>
  .section-{{section.id}} {padding-top: 75px;padding-bottom: 80px;}
</style>
<section-trade-dis>
  <div class="page-layout section-{{section.id}}" style="background: #F7F7F7;">
    <div class="page-layout-content">
      <h2>{{ section.settings.title }}</h2>
      <div class="dismode">
          {% for block in section.blocks %}
        <div class="disitem">
          <div class="disimg">
            {% render 'img-lazyload', image_url: block.settings.img %}
          </div>
          <div class="distitle">
            <p>{{ block.settings.text }}</p>
            <h2>{{ block.settings.title }}</h2>
            <p>{{ block.settings.text1 }}</p>
          </div>
        </div>
        {% endfor %}
      </div>
      <div class="trade-disbutton">
        <a href="{{ section.settings.url }}">今すぐ下取り</a>
        <p style="font-size: 12px;margin-top: 50px;">ご不明な点がありましたら、お気軽にお問い合わせください。customer@revopoint3d.com</p>
      </div>
    </div>
  </div>
</section-trade-dis>

      
{% schema %}

    {
  "name": "section-trade-dis",
  "settings": [
    
    {
      "type": "text",
      "id": "title",
      "label": "板块标题"
    },
      {  
      "type": "url",
      "id": "url",
      "label": "按钮链接"
      }
  ],
  "blocks": [
      
      {
       "name": "item",
      "type": "item",
      "settings": [
      
      {  
      "type": "image_picker",
      "id": "img",
      "label": "配图"
      },
      {  
      "type": "text",
      "id": "text",
      "label": "小标题"
      },
      {  
      "type": "text",
      "id": "title",
      "label": "大标题"
      },
      {  
      "type": "text",
      "id": "text1",
      "label": "描述"
      }
       
      ]
    }
  ],
  "presets": [
    {
      "name": "section-trade-dis"
    }
  ]
}

{% endschema %}

