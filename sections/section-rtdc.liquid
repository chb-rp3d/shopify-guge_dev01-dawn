{{ 'section-rtdc.css' | asset_url | stylesheet_tag }}
<style>
   .section-hpc-swiper-container .page-layout-content{
     padding-top: 60px;
    padding-bottom: 60px;
}
    .section-{{section.id}}{
       padding-top: 120px;
    padding-bottom: 120px;
  }

</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.7.5/lottie.min.js"></script>

<section-rtdc>
  <div class="page-layout section-{{section.id}}">
    <div class="page-layout-content">
    <div class="rtdc">  
      <div class="rtdc-left">
        <span class="rtdcfp">{{ section.settings.title }}</span>
         <div id="lottie" style="width: 50%;margin: auto;"></div>
         <span class="rtdcsp">{{ section.settings.text }} </span>
      </div>
      <div class="rtdc-right">
         <span class="rtdcfp">{{ section.settings.title1 }} </span>
         <div id="lottie1" style="width: 50%;margin: auto;"></div>
         <span class="rtdcsp">{{ section.settings.text1 }} </span>
      </div>
    </div>
      
    </div>
  </div>
  </section-rtdc>
<script>

    var animation = lottie.loadAnimation({
        container: document.getElementById('lottie'),
        renderer: 'svg',
        loop: true,
        autoplay: true,
        path: 'https://cdn.shopify.com/s/files/1/0601/2256/2760/t/17/assets/zfj.json'
    });
</script>
<script>

    var animation = lottie.loadAnimation({
        container: document.getElementById('lottie1'),
        renderer: 'svg',
        loop: true,
        autoplay: true,
        path: 'https://cdn.shopify.com/s/files/1/0601/2256/2760/t/17/assets/bq.json'
    });
</script>
{% schema %}
{
  "name": "section-rtdc",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
     {
       "type": "image_picker",
       "id": "img",
       "label": "图片"
    },
     {
      "type": "richtext",
      "id": "text",
      "label": "标题"
    },
     {
      "type": "richtext",
      "id": "title1",
      "label": "标题"
    },
     {
       "type": "image_picker",
       "id": "img1",
       "label": "图片"
    },
     {
      "type": "richtext",
      "id": "text1",
      "label": "标题"
    }
  ],
  "presets": [
    {
      "name": "section-rtdc"
    }
  ]
}
{% endschema %}
