{{ 'section-pyb.css' | asset_url | stylesheet_tag }}
<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
  }
  .section-{{section.id}} .page-layout-content {
    padding-top: 85px;
    padding-bottom: 85px;
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>

<div class="page-layout section-{{section.id}}">
  <div class="page-layout-content">
    <h2 class="section-abmission-h2">{{ section.settings.title }}</h2>
    <div class="pyb" id="pyb">
      <span style="display: flex;align-items: center;">
        {%- render 'img-lazyload', image_url: section.settings.img -%}
        {{ section.settings.title2 }}
      </span>
      <p class="section-abmission-text1" style="margin-bottom: 20px;">{{ section.settings.text }}</p>
      <span style="display: flex;align-items: center;">
        {%- render 'img-lazyload', image_url: section.settings.img1 -%}
        {{ section.settings.title3 }}
      </span>
      <p class="section-abmission-text2">{{ section.settings.text1 }}</p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "section-pyb",
  "settings": [

    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "richtext",
      "id": "title2",
      "label": "标题"
    },
    {
          "type": "image_picker",
          "id": "img",
          "label": "配图"
        },
    {
          "type": "image_picker",
          "id": "img1",
          "label": "配图"
        },
    {
      "type": "richtext",
      "id": "title3",
      "label": "标题"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "文本内容"
    },
    {
      "type": "richtext",
      "id": "text1",
      "label": "文本内容"
    }
  ],
  "presets": [
    {
      "name": "section-pyb"
    }
  ]
}
{% endschema %}
