  "name": "section-about-banner",
  "settings": [
    {
      "type": "checkbox",
      "id": "title_type",
      "label": "移动端标题选择白色类型",
      "default": false
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "richtext",
      "label": "二级标题",
      "id": "text"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "配图"
    },
    {
      "type": "image_picker",
      "id": "md_img",
      "label": "移动端配图"
    },
    {
      "type": "video",
      "id": "video_file",
      "label": "自动播放视频视频文件"
    },
    {
      "type": "video",
      "id": "modal_video_file",
      "label": "弹窗视频"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "小图标"
    },
    {
      "type": "image_picker",
      "id": "md_icon",
      "label": "移动端小图标"
    },
    {
      "type": "url",
      "id": "url",
      "label": "按钮跳转链接"
    },
    {
      "type": "url",
      "id": "join_url",
      "label": "join url"
    }
  ],
  "presets": [
    {
      "name": "section-about-banner"
    }
  ]
}
{% endschema %}
