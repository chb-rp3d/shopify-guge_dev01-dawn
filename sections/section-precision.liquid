{{ 'section-precision.css' | asset_url | stylesheet_tag }}
<style>
    .section-{{section.id}}{
        padding:{{section.settings.padding}};
    }
    .section-{{section.id}} .section-precision-ward{
      justify-content:{{section.settings.align}};
    }
    .section-{{section.id}} .section-precision-item strong{
      font-size: {{section.settings.font_size}};
    }

    @media screen and (max-width: 768px) {
        .section-{{section.id}}{
        padding:{{section.settings.md_padding}};
    }
    .section-{{section.id}} .section-precision-ward{
      justify-content:{{section.settings.md_align}};
    }
    {% case section.settings.type %}
    {% when 'type2' %}
      .section-{{section.id}} .section-precision-container{
        column-gap: 15px;
        flex-direction: column;
        row-gap: 20px;
      }
      .section-{{section.id}} .section-precision-ward{
        justify-content: space-between;
        flex-direction: row;
        column-gap: 15px;
      }
      .section-{{section.id}} .section-precision-img{
        max-width: 100%;

      }
      .section-{{section.id}} .section-precision-item:last-child{
        border-left: 1px dashed #D2D2D2;
        padding-left: 17px;
      }
      }
    {% else %}

  {% endcase %}
    }
</style>

<div class="page-layout section-{{section.id}}">
  <div class="page-layout-content">
    <div class="section-precision-container">
      <div class="section-precision-img">
        {% render 'img-lazyload', image_url: section.settings.img %}
      </div>
      <div class="section-precision-ward" style="justify-content: {{section.settings.align}} ;">
        {% for item in section.blocks %}
          <div class="section-precision-item">{{ item.settings.text }}</div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "section-precision",
  "settings": [
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "64px 20px 0"
    },
    {
      "type": "select",
      "id": "type",
      "label": "模块类型",
      "default": "type1",
      "options": [
        {
          "label": "type1",
          "value": "type1"
        },
        {
          "label": "type2",
          "value": "type2"
        }
      ]
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "12px 20px 0"
    },
    {
      "type": "text",
      "id": "font_size",
      "label": "pc端高亮字体大小",
      "default": "52px"
    },
    {
      "type": "select",
      "id": "align",
      "label": "文本pc排列方式",
      "options": [
        {
          "label": "center",
          "value": "center"
        },
        {
          "label": "flex-end",
          "value": "flex-end"
        },
        {
          "label": "space-between",
          "value": "space-between"
        }
      ]
    },

    {
      "type": "select",
      "id": "md_align",
      "label": "文本移动端排列方式",
      "options": [
        {
          "label": "center",
          "value": "center"
        },
        {
          "label": "flex-end",
          "value": "flex-end"
        },
        {
          "label": "space-between",
          "value": "space-between"
        }
      ]
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "配图"
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "文本"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-precision"
    }
  ]
}
{% endschema %}
