{{ 'section-about-mission.css' | asset_url | stylesheet_tag }}
{{ 'section-about-mission.js' | asset_url | stylesheet_tag }}
<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
  }
  .section-{{section.id}} .page-layout-content {
    padding-top: 85px;
    padding-bottom: 85px;
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>

<div class="page-layout section-{{section.id}}">
  <div class="page-layout-content">
   <div class="abmission" id="mission"> 
    <h2 class="section-abmission-h2">{{ section.settings.title }}</h2>
    <p class="section-abmission-text1" style="margin-bottom: 20px;">{{ section.settings.text }}</p>
    <p class="section-abmission-text2">{{ section.settings.text1 }}</p>
   </div>
    <div class="mission-model">
      {% for block in section.blocks %}
      <div class="mission-item">
        <div class="mission-img">
         {% render 'img-lazyload', image_url: block.settings.img %}
        </div>
        <span class="missiontitle" id="counter{{ forloop.index }}">{{ block.settings.text }}</span>
        <span class="missiontitle">{{ block.settings.text1 }}</span>
      </div>
        {% endfor %}
    </div>
    
  </div>
</div>

{% schema %}
{
  "name": "section-about-mission",
  "settings": [
    
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "文本内容"
    },
    {
      "type": "richtext",
      "id": "text1",
      "label": "文本内容"
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "配图"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "文本内容"
        },
        {
          "type": "richtext",
          "id": "text1",
          "label": "文本内容"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-about-mission"
    }
  ]
}
{% endschema %}