<style>
  .section-imgtext-s__content {
      display: flex;
      gap: 20px;
      flex-direction: column;
    }

    .section-imgtext-s__content .section-imgtext-s__imgtext-item {
      width: calc(50% - 78px);
    }

    .section-imgtext-s__content .section-imgtext-s__imgtext-item:nth-of-type(even) {
      align-self: end;
      margin: -100px 0;
      transform: translateY(-20%);
    }

    .section-imgtext-s__content .section-imgtext-s__imgtext-item .section-imgtext-s__imgtext-img img {
      /* max-width: 100%; */
      /* width: 200px; */
    }

    .section-imgtext-s__content .section-imgtext-s__imgtext-item .section-imgtext-s__imgtext-text {
      padding-top: 30px;
      color: #4D4D4D
    }

    @media screen and (max-width: 768px) {
      .section-imgtext-s__content {
        align-items: center;
      }
      h2 {
        font-size: 28px;
      }

      .section-imgtext-s__content .section-imgtext-s__imgtext-item {
        width: 100%;
        text-align: center;
      }
      .section-imgtext-s__content .section-imgtext-s__imgtext-item .section-imgtext-s__imgtext-img{
        text-align: center;
      }

      .section-imgtext-s__content .section-imgtext-s__imgtext-item .section-imgtext-s__imgtext-text {
        padding: 20px 20px 40px;
      }

      .section-imgtext-s__content .section-imgtext-s__imgtext-item:nth-of-type(even) {
        align-self: initial;
        margin: 0;
        transform: translateY(0);
      }
    }
</style>

<section-imgtext-s>
  
  <section class="shopify-section section-imgtext-s__section" style="background-color: #f5f5f7;">
    <div class="page-layout"></div>
    <div class="page-layout-content">
      {% if section.settings.title != blank %}
        <div class="section-imgtext-s__title">{{ section.settings.title }}</div>
      {% endif %}
      <div class="section-imgtext-s__content">
        {% liquid
          assign items = section.blocks | where: 'type', 'item'
        %}

        {% if items.size > 0 %}
          {% for item in items %}
            <div class="section-imgtext-s__imgtext-item">
              <div class="section-imgtext-s__imgtext-img">
                <img src="{{ item.settings.img | image_url }}" alt="">
              </div>
              <div class="section-imgtext-s__imgtext-text">
                {{ item.settings.text }}
              </div>
            </div>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </section>
</section-imgtext-s>

{% schema %}
{
  "name": "Section img text s",
  "settings": [
     {
      "type": "richtext",
      "id": "title",
      "label": "标题",
    },
  ],
  "blocks": [{
    "name": "item",
    "type": "item",
    "settings": [
      {
        "type": "richtext",
        "id": "text",
        "label": "文字"
      },
      {
        "type": "image_picker",
        "id": "img",
        "label": "图片"
      }
    ]
  }],
  "presets": [{
    "name": "section-imgtext-s"
  }]
}
{% endschema %}
