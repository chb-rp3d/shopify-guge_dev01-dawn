{{ 'section-about-re.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
  }
  .section-{{section.id}} .page-layout-content {
    padding-top: 85px;
    padding-bottom: 85px;
    background: #F5F5F5;
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>

<div class="page-layout section-{{section.id}}">
  <div class="page-layout-content">
    <div class="abre">
      <h2 class="section-abre-h2">{{ section.settings.title }}</h2>
      <span class="section-abre-text1" style="margin-bottom: 20px;">{{ section.settings.text }}</span>
      <span class="section-abre-text2">{{ section.settings.text1 }}</span>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "section-about-re",
  "settings": [
    
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "文本内容"
    },
    {
      "type": "richtext",
      "id": "text1",
      "label": "文本内容"
    }
  ],
  "presets": [
    {
      "name": "section-about-re"
    }
  ]
}
{% endschema %}
