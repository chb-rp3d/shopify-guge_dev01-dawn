{{ 'section-imu.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
      background-color:#232327;
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>

<div class="page-layout section-{{section.id}}">
  <div class="page-layout-content">
    <h2 class="section-imu-h2">{{ section.settings.title }}</h2>
    <div class="section-imu-text">{{ section.settings.text }}</div>
    <div class="section-imu-container">
      <div class="section-imu-img">
        {% render 'img-lazyload', image_url: section.settings.img %}
      </div>
      <div class="section-imu-ward">
        {% for item in section.blocks %}
          <div class="section-imu-item">
            {% render 'img-lazyload', image_url: item.settings.icon %}
            <div class="section-imu-item-text">{{ item.settings.text }}</div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "section-imu",
  "settings": [
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "120px 20px 0"
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "20px 20px 0"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "文本内容"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "配图"
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "icon图标"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-imu"
    }
  ]
}
{% endschema %}
