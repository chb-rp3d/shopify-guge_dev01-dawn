{{ 'bulk-producttab.css' | asset_url | stylesheet_tag }}
<style>
     .section-{{section.id}} .page-layout-content{
       padding-top: 160px;
  }
  @media screen and (max-width: 768px) {
    #ass {
      display: none;
    }
  }
</style>
<section-bulkpt id="ass">
  <div class="page-layout section-{{section.id}}">
    <div class="page-layout-content">
     <div class="bulktitletab">
      {{ section.settings.text3 }}
      {{ section.settings.text4 }}
     </div>
      <div class="hpc">
        {% for block in section.blocks %}
        <div class="hpc-item">
          <h2>{{ block.settings.title }}</h2>
          <div class="ptimg">
          {% render 'img-lazyload', image_url: block.settings.img%}
          </div>
          <div class="bulkoff">
           <div class="offmode">
              <div class="offitem">
                {{ block.settings.text1 }}
                 {{ block.settings.text2 }}
              </div>
             <div class="offitem">
                {{ block.settings.text3 }}
                 {{ block.settings.text4 }}
              </div>
             <div class="offitem">
                {{ block.settings.text5 }}
                 {{ block.settings.text6 }}
              </div>
             <div class="offitem">
                {{ block.settings.text7 }}
                 {{ block.settings.text8 }}
              </div>
           </div>
          </div>
          <div class="pprice">
            {{ block.settings.text9 }}
          </div>
          <div class="hpcbn">
            <a href="{{ block.settings.url3 }}">
              <p>今すぐ購入</p>
              <div class="cart-icon">
              {% render 'img-lazyload', image_url: block.settings.img1 %}
              </div>
            </a>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section-bulkpt>
