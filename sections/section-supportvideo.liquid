{{ 'supportvideo.css' | asset_url | stylesheet_tag }}
{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
<script src="{{'swiper.min.js' | asset_url}}" defer></script>
<script src="{{"supportvideo.js" | asset_url}}" defer></script>
<style>
  .section-{{section.id}}{
      padding-bottom: 80px;
}
</style>
<section-supportvideo>
  <div class="page-layout section-{{section.id}}">
    <div class="page-layout-content">
      <h2 class="section-faq-h2">
        <p>{{ section.settings.title }}</p>
      </h2>
      <div class="swiper videoswiper">
         <div class="swiper-wrapper">
           {% for block in section.blocks %}
           <div class="swiper-slide">
             <iframe width="100%" height="200px" src="{{ block.settings.url }}" title="YouTube video player" frameborder="0" 
               allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
          </div>
           {% endfor %}
           
         </div>
         <div class="swiper-button-next custom-swiper-button-next"></div>
      <div class="swiper-button-prev custom-swiper-button-prev"></div>
      </div>
    </div>
  </div>
</section-supportvideo>
{% schema %}

    {
  "name": "section-supportvideo",
  "settings": [
    
    {
      "type": "text",
      "id": "title",
      "label": "板块标题",
      "default": "Video"
    }
  ],
  "blocks": [
     {
       "name": "item",
      "type": "item",
      "settings": [
       {
        "type": "url",
        "id": "url",
        "label": "Youtube 链接"
       }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-supportvideo"
    }
  ]
}

{% endschema %}
