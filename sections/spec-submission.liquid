{{ 'spec-submission.css' | asset_url | stylesheet_tag }}
<style>
   .section-hpc-swiper-container .page-layout-content{
     padding-top: 60px;
    padding-bottom: 60px;
}
</style>
<swiper-component
  id="section-{{section.id}}"
  data-open="true"
  data-space-between="25"
  data-slides-per-view="1"
  data-watch-slides-progress="true"
  data-breakpoints='{"769":{"slidesPerView":1,"spaceBetween":25}}'
>
  <div class="page-layout section-sub-swiper-container">
    <div class="page-layout-content">
      <h2 class="section-sub-swiper-h2">{{ section.settings.title }}</h2>
      <div class="sw-slider">
        <div class="section-sub-swiper sw-left">
          <div class="swiper-container main-swiper">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <div class="swiper-slide">
                  {% render 'img-lazyload', image_url: block.settings.img %}
                </div>
              {% endfor %}
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-pagination"></div>
          </div>
        </div>
        <div class="sw-right">
          {{ section.settings.title1 }}
          {{ section.settings.text }}
          <a href="{{ section.settings.url }}">{{ section.settings.text1 }}</a>
        </div>
      </div>
      <div class="thumb-swiper">
        <div class="thumb-item">
           {% render 'img-lazyload', image_url: section.settings.img2 %}
           {{ section.settings.text2 }}
        </div>
         <div class="thumb-item">
           {% render 'img-lazyload', image_url: section.settings.img3 %}
           {{ section.settings.text3 }}
        </div>
         <div class="thumb-item">
           {% render 'img-lazyload', image_url: section.settings.img4 %}
           {{ section.settings.text4 }}
        </div>
         <div class="thumb-item">
           {% render 'img-lazyload', image_url: section.settings.img5 %}
           {{ section.settings.text5 }}
        </div>
      </div>
    </div>
  </div>
</swiper-component>
{% schema %}
{
  "name": "section-submission",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
     {
          "type": "image_picker",
          "id": "img",
          "label": "图片"
    },
     {
      "type": "richtext",
      "id": "title1",
      "label": "标题"
    },
     {
      "type": "richtext",
      "id": "text",
      "label": "标题"
    },
     {
      "type": "url",
      "id": "url",
      "label": "链接"
    },
     {
      "type": "richtext",
      "id": "text1",
      "label": "链接标题"
    },
    {
      "type": "image_picker",
       "id": "img2",
        "label": "图片"
    },
    {
      "type": "image_picker",
       "id": "img3",
        "label": "图片"
    },
    {
      "type": "image_picker",
       "id": "img4",
        "label": "图片"
    },
    {
      "type": "image_picker",
       "id": "img5",
        "label": "图片"
    },
     {
      "type": "richtext",
      "id": "text2",
      "label": "标题"
    },
     {
      "type": "richtext",
      "id": "text3",
      "label": "标题"
    },
     {
      "type": "richtext",
      "id": "text4",
