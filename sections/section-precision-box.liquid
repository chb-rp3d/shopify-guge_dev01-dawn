{{ 'section-precision-box.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
      background-color:#232327;
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>

<div class="page-layout section-{{section.id}}">
  <div class="page-layout-content">
    {% if section.settings.title != blank %}
      <h2 class="section-precision-box-h2">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.text != blank %}
      <div class="section-precision-box-text">{{ section.settings.text }}</div>
    {% endif %}
    <div class="section-precision-box">
      {% if section.settings.video_file != blank %}
        {{
          section.settings.video_file
          | video_tag: autoplay: true, loop: true, muted: true, controls: false, image_size: '1200x'
        }}
      {% else %}
        {% render 'img-lazyload', image_url: section.settings.img %}
      {% endif %}
    </div>
    {% if section.settings.icon != blank %}
      <div class="section-precision-box-footer">
        <div class="section-precision-box-footer-item">
          {% render 'img-lazyload', image_url: section.settings.icon %}
        </div>
        <div class="section-precision-box-footer-item">
          {% for t in section.blocks %}
            <div class="section-precision-box-footer-text">{{ t.settings.text }}</div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "section-precision-box",
  "settings": [
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "120px 20px 0"
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "20px 20px 0"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "文本内容"
    },
    {
      "type": "video",
      "id": "video_file",
      "label": "视频文件"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "配图"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "第二个图"
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "文案"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-precision-box"
    }
  ]
}
{% endschema %}
