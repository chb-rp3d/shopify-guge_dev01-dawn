{{ 'section-directly.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>

<div class="page-layout section-{{section.id}}">
  <div class="page-layout-content">
    <div class="home-accessories-line"></div>
    <h2 class="section-directly-h2">{{ section.settings.title }}</h2>
    <div class="section-directly-container">
      {% for block in section.blocks %}
        <div class="section-directly-item">
          {% render 'img-lazyload', image_url: block.settings.icon, class_name: 'pc-media' %}
          {% render 'img-lazyload', image_url: block.settings.md_icon, class_name: 'mobile-media' %}
          <div class="section-directly-text">{{ block.settings.text }}</div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "section-directly",
  "settings": [
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "70px 20px 0"
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "40px 20px 0"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "图标"
        },
        {
          "type": "image_picker",
          "id": "md_icon",
          "label": "移动端图标"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "文本"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-directly"
    }
  ]
}
{% endschema %}
