{{ 'section-generation.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>

<div class="page-layout section-{{section.id}}">
  <div class="page-layout-content">
    <h2 class="section-generation-h2">{{ section.settings.title }}</h2>
    <div class="section-generation-container">
      <div class="section-generation-img">
        {% render 'img-lazyload', image_url: section.settings.img, class_name: 'pc-media' %}
        {% render 'img-lazyload', image_url: section.settings.md_img, class_name: 'mobile-media' %}
      </div>
      <div class="section-generation-ward">
        <div class="section-generation-title">{{ section.settings.sub_title }}</div>
        <div class="section-generation-text">{{ section.settings.text }}</div>
        {% liquid
          assign product = all_products[section.settings.product_origin]
          assign current_variant = product
          assign variant_id = section.settings.variant_id
          if variant_id != blank and product.variants.size > 1
            for variant in product.variants
              if variant.id == variant_id
                assign current_variant = variant
              endif
            endfor
          else
            assign variant_id = product.variants[0].id
          endif
        %}
        <div class="section-generation-price">{{ current_variant.price | money | strip_html }}</div>
        <div class="section-generation-btns">
          <a class="section-generation-link" href="{{section.settings.url1}}">今すぐ購入 ></a>
          <a class="section-generation-link" href="{{section.settings.url2}}">詳細はこちら ></a>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "section-generation",
  "settings": [
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "96px 20px 0"
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "60px 20px 0"
    },
    {
      "type": "product",
      "id": "product_origin",
      "label": "关联产品"
    },
    {
      "type": "number",
      "id": "variant_id",
      "label": "产品变体id 不填默认第一个"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "richtext",
      "id": "sub_title",
      "label": "二级标题"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "文本"
    },
    {
      "type": "url",
      "id": "url1",
      "label": "BUY NOW链接"
    },
    {
      "type": "url",
      "id": "url2",
      "label": "LEARN MORE链接"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "配图"
    },
    {
      "type": "image_picker",
      "id": "md_img",
      "label": "移动端配图"
    }
  ],
  "presets": [
    {
      "name": "section-generation"
    }
  ]
}
{% endschema %}
