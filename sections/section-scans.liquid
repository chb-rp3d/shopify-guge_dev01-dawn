{{ 'section-scans.css' | asset_url | stylesheet_tag }}
{{ 'swiper.min.css' | asset_url | stylesheet_tag }}
<script src="{{'swiper.min.js' | asset_url}}" defer></script>
<script src="{{"section-scans.js" | asset_url}}" defer></script>

<style>
  .section-{{section.id}}{
      padding:{{section.settings.padding}};
      background-color: rgb(41, 41, 41);

  }

  @media screen and (max-width: 768px) {
      .section-{{section.id}}{
      padding:{{section.settings.md_padding}};
  }
  }
</style>
<section-scans>
  <div class="page-layout section-{{section.id}}">
    <div class="page-layout-content">
      <h2 class="section-scans-h2">{{ section.settings.title }}</h2>
      <div class="section-scans-text">{{ section.settings.text }}</div>
      <div class="section-scans-container">
        <div class="swiper-container">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="swiper-slide">
                <iframe
                  title="{{block.settings.text}}"
                  frameborder="0"
                  mozallowfullscreen="true"
                  webkitallowfullscreen="true"
                  allow="autoplay; fullscreen; xr-spatial-tracking"
                  xr-spatial-tracking
                  execution-while-out-of-viewport
                  execution-while-not-rendered
                  web-share
                  src="{{block.settings.model_url}}/embed"
                ></iframe>
              </div>
            {% endfor %}
          </div>
          <div class="swiper-pagination"></div>
        </div>
        <div class="section-swiper-button">
          <div class="swiper-button-prev-cu">
            {% render 'img-next-icon' %}
          </div>
          <div class="swiper-button-next-cu">
            {% render 'img-next-icon' %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section-scans>

{% schema %}
{
  "name": "section-scans",
  "settings": [
    {
      "type": "text",
      "id": "padding",
      "label": "模块内边距",
      "default": "120px 20px 0"
    },
    {
      "type": "text",
      "id": "md_padding",
      "label": "移动端模块内边距",
      "default": "60px 20px 0"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "文本内容"
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "url",
          "id": "model_url",
          "label": "模型链接"
        },
        {
          "type": "text",
          "id": "text",
          "label": "模型标题"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "section-scans"
    }
  ]
}
{% endschema %}
